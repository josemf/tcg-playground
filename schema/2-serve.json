{
    "$id": "https://tennistcg.io/schema/2-serve.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phase 2 — Serve",
    "type": "object",
    "required": [
        "context",
        "players",
        "phase"
    ],
    "properties": {
        "context": {
            "$ref": "https://tennistcg.io/schema/state-context.json"
        },
        "players": {
            "type": "object",
            "properties": {
                "playerA": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                },
                "playerB": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                }
            },
            "required": [
                "playerA",
                "playerB"
            ]
        },
        "phase": {
            "type": "object",
            "required": [
                "type",
                "firstServe",
                "score",
                "outcome",
                "sq",
                "playerMovement"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "serve"
                },
                "firstServe": {
                    "type": "object",
                    "required": [
                        "2d6",
                        "valid"
                    ],
                    "properties": {
                        "2d6": {
                            "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/roll2d6"                            
                        },
                        "valid": {
                            "type": "boolean"
                        }
                    }
                },
                "secondServe": {
                    "type": "object",
                    "required": [
                        "2d6"
                    ],
                    "properties": {
                        "2d6": {
                            "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/roll2d6"                            
                        }
                    }
                },
                "score": {
                    "type": "object",
                    "properties": {                        
                        "base": {
                            "description": "The base serve score after a first or second serve before any adjustements",
                            "type": "integer"
                        },
                        "serve": {
                            "description": "The base serve skill",
                            "type": "integer"
                        },                        
                        "bonus": {
                            "description": "Bonuses are added to Serve SQ from effects originating from equipments and shot or moment cards",
                            "type": "object",
                            "properties": {
                                "total": {
                                    "type": "number"
                                },
                                "effects": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "https://tennistcg.io/schema/state-effects.json"
                                    }
                                }
                            },
                            "required": ["total"]
                        },
                        "mentalAdjustment": {
                            "description": "Mental adjustement are applied after any bonuses",
                            "type": "integer"
                        },
                        "finalScore": {
                            "description": "The final serve score",
                            "type": "object",
                            "properties": {
                                "secondServeModule12Rule": {
                                    "description": "In second serves the second serve module 12 rule must be applied: Mod (12 − (Serve Total − 12)).",
                                    "type":"boolean"
                                },
                                "value": {
                                    "description": "Final calculated score value after summing base serve with serve skill, bonuses, mental adjustement and applying the second serve module 12 rule, when a second serve",
                                    "type":"number"
                                }
                            },
                            "required": ["secondServeModule12Rule", "value"]
                        }
                    },
                    "required": [
                        "base",
                        "serve",
                        "bonuses",
                        "mentalAdjustement",
                        "finalScore"
                    ]
                }, 
                "outcome": {
                    "description": "Should follow the outcome rules: Serve Total < 6 = Double Fault; Exactly 12 = Ace; 7–11 or > 12 = valid serve.",
                    "type": "string",
                    "enum": [
                        "ace",
                        "doubleFault",
                        "valid"
                    ]
                },
                "sq": {
                    "properties": {
                        "speedModifier": {
                            "type": "integer"                            
                        },
                        "value": {
                            "description": "Serve SQ score from final calculated score and adding the speed modifier",
                            "type": "integer",
                            "minimum": 0                            
                        }
                    }
                },
                "playerMovement": {
                    "description": "The player can decide to approach the net, move back to the baseline or stay where they are",
                    "type":"object",
                    "properties": {
                        "decision": {
                            "type": "string",
                            "enum": ["approachTheNet", "backToTheBaseline", "stay"]
                        },
                        "staminaSpent": {
                            "type": "integer"
                        }
                    },
                    "required": ["decision", "cost"]
                }
            }
        }
    }
}
