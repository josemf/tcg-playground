{
    "$id": "https://tennistcg.io/schema/state-effects.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Effect State Object",
    "type": "object",
    "properties": {
        "sourceType": {
            "type": "string",
            "enum": [
                "shot",
                "momentum",
                "equipment"
            ]
        },
        "sourceCard": {
            "type": "string"
        },
        "serve": {
            "type": "integer"
        },
        "forehand": {
            "type": "integer"
        },
        "backhand": {
            "type": "integer"
        },
        "agility": {
            "type": "integer"
        },
        "stamina": {
            "type": "integer"
        },
        "sp": {
            "type": "integer"
        },
        "pressure": {
            "type": "integer"
        },
        "adrenaline": {
            "type": "integer"
        },
        "expiresAfter": {
            "type": "string",
            "enum": [
                "changeover",
                "endOfGame",
                "equipment"
            ]
        }
    },
    "required": [
        "sourceType",
        "sourceCard",
        "expiresAfter"
    ]
}
