{
    "$id": "https://tennistcg.io/schema/state-effects.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Effect State Object",
    "type": "object",
    "properties": {
        "sourceType": {
            "type": "string",
            "enum": [
                "shot",
                "momentum",
                "equipment"
            ]
        },
        "sourceCard": {
            "type": "string"
        },
        "addServe": {
            "type": "integer"
        },
        "addForehand": {
            "type": "integer"
        },
        "addBackhand": {
            "type": "integer"
        },
        "addAgility": {
            "type": "integer"
        },
        "addStamina": {
            "type": "integer"
        },
        "addSp": {
            "type": "integer"
        },
        "addPlayerPressure": {
            "type": "integer"
        },
        "addOpponentPressure": {
            "type": "integer"
        },        
        "addPlayerAdrenaline": {
            "type": "integer"
        },
        "addOpponentAdrenaline": {
            "type": "integer"
        },        
        "expiresAfter": {
            "type": "string",
            "enum": [
                "changeover",
                "endOfGame",
                "endOfPoint",
                "equipment"
            ]
        }
    },
    "required": [
        "sourceType",
        "sourceCard",
        "expiresAfter"
    ]
}
