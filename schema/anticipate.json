{
  "$id": "https://tennistcg.io/schema/ph2-anticipate.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phase 2 â€” Anticipate",
  "type": "object",
  "required": ["$prev", "$curr", "$next", "context", "players", "phase"],
  "properties": {
    "$prev": { "type": "string", "format": "uri", "const": "https://tennistcg.io/schema/ph1-serve.json" },
    "$curr": { "type": "string", "format": "uri", "const": "https://tennistcg.io/schema/ph2-anticipate.json" },
    "$next": { "type": "string", "format": "uri", "const": "https://tennistcg.io/schema/ph3-select-shot.json" },
    "context": { "$ref": "https://tennistcg.io/schema/ph1-serve.json#/properties/context" },
    "players": { "$ref": "https://tennistcg.io/schema/ph1-serve.json#/properties/players" },
    "phase": {
      "type": "object",
      "required": ["id", "anticipate"],
      "properties": {
        "id": { "type": "string", "const": "ph2-anticipate" },
        "anticipate": {
          "type": "object",
          "required": ["defenderId", "position", "incomingSQ", "effectiveSQFaced"],
          "properties": {
            "defenderId": { "type": "string" },
            "position": { "type": "string", "enum": ["Baseline", "Net"] },
            "incomingSQ": { "type": "integer", "minimum": 0 },
            "baseline": {
              "type": "object",
              "properties": {
                "agility": { "type": "integer" },
                "staminaSpent": { "type": "integer", "minimum": 0 }
              },
              "required": ["agility", "staminaSpent"]
            },
            "netThreshold10": {
              "type": "object",
              "properties": {
                "applied": { "type": "boolean" },
                "adjustedSQ": { "type": "integer" }
              },
              "required": ["applied", "adjustedSQ"]
            },
            "effectiveSQFaced": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
