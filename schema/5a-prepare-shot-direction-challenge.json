{
    "$id": "https://tennistcg.io/schema/5a-prepare-shot-direction-challenge.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phase 5 — Prepare Shot — change hit direction challenge",
    "type": "object",
    "required": [
        "context",
        "players",
        "phase"
    ],
    "properties": {
        "context": {
            "$ref": "https://tennistcg.io/schema/state-context.json"
        },
        "players": {
            "type": "object",
            "properties": {
                "playerA": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                },
                "playerB": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                }
            },
            "required": [
                "playerA",
                "playerB"
            ]
        },
        "phase": {
            "type": "object",
            "required": [
                "type",
                "directionChangeChallenge"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "prepare-shot-direction-challenge"
                },
                "directionChangeChallenge": {
                    "description": "The waiting player acknowledges and ties to anticipate a shot direction change",
                    "type": "object",
                    "properties": {
                        "hittingPlayerDeclared": {
                            "type": "string",
                            "enum": [
                                "keep",
                                "change"
                            ]
                        },
                        "hittingPlayer1d6Pick": {
                            "description": "The hitting player pick for the 1d6 challenge number",
                            "type": "number",
                            "minimum": 1,
                            "maximum": 6
                        },
                        "1d6Pick": {
                            "description": "The responde play pick for the challenge number. Can't be the same number of `hittingPlayer1d6Pick`",
                            "type": "number",
                            "minimum": 1,
                            "maximum": 6
                        }
                    },
                    "required": [
                        "hittingPlayerDeclared"
                    ],
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "hittingPlayerDeclared": {
                                        "const": "change"
                                    }
                                }
                            },
                            "then": {
                                "required": [
                                    "hittingPlayer1d6Pick",
                                    "1d6Pick"
                                ]
                            },
                            "else": {
                                "not": {
                                    "anyOf": [
                                        {
                                            "required": [
                                                "hittingPlayer1d6Pick"
                                            ]
                                        },
                                        {
                                            "required": [
                                                "1d6Pick"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}
