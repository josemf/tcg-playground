{
    "$id": "https://tennistcg.io/schema/5e-execute-shot-momentum.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phase 5 â€” Execute Shot Play Momentum cards",
    "type": "object",
    "required": [
        "context",
        "players",
        "phase"
    ],
    "properties": {
        "context": {
            "$ref": "https://tennistcg.io/schema/state-context.json"
        },
        "players": {
            "type": "object",
            "properties": {
                "playerA": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                },
                "playerB": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                }
            },
            "required": [
                "playerA",
                "playerB"
            ]
        },
        "phase": {
            "type": "object",
            "required": [
                "type",
                "selectedShot",
                "queue",
                "decidePlayMomentumCard"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "execute-shot-momentum"
                },
                "selectedShot": {
                    "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/shotCard",
                    "description": "The shot that is currently being resolved, against which momentum cards may be played."                    
                },
                "queue": {
                    "type": "array",
                    "description": "Current stack (queue) of momentum cards played (LIFO).",                    
                    "items": {
                        "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/momentumCard"
                    }
                },
                "decidePlayMomentumCard": {
                    "type": "string",
                    "description": "Whether the current player opts to play a momentum card or passes priority.",
                    "enum": [
                        "playMomentumCard",
                        "pass"
                    ]
                },
                "playedMomentumCard": {
                    "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/momentumCard",
                    "description": "Momentum card played this turn, if any (required if 'playMomentumCard' chosen)."                    
                },
                "spSpent": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Swing Points (SP) spent to play the current momentum card."
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "decidePlayMomentumCard": {
                                "const": "playMomentumCard"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "playedMomentumCard",
                            "spSpent"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "decidePlayMomentumCard": {
                                "const": "pass"
                            }
                        }
                    },
                    "then": {
                        "not": {
                            "required": [
                                "playedMomentumCard",
                                "spSpent"
                            ]
                        }
                    }
                }
            ]
        }
    }
}
