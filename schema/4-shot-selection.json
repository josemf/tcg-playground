{
    "$id": "https://tennistcg.io/schema/4-shot-selection.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phase 4 â€” Shot Selection",
    "type": "object",
    "required": [
        "context",
        "players",
        "phase"
    ],
    "properties": {
        "context": {
            "$ref": "https://tennistcg.io/schema/state-context.json"
        },
        "players": {
            "type": "object",
            "properties": {
                "playerA": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                },
                "playerB": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                }
            },
            "required": [
                "playerA",
                "playerB"
            ]
        },
        "phase": {
            "type": "object",
            "required": [
                "type",
                "shot",
                "staminaSpent",
                "spSpent"
                
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "shot-selection"
                },
                "shot": {
                    "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/shotCard"
                },
                "staminaSpent": {
                    "type": "integer",
                    "minimum": 0
                },
                "spSpent": {
                    "type": "integer",
                    "minimum": 0
                }                
            }
        }
    }
}
