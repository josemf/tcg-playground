{
    "$id": "https://tennistcg.io/schema/6-play-momentum-card.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phase 6 â€” Play a Momentum card",
    "type": "object",
    "required": [
        "context",
        "players",
        "phase"
    ],
    "properties": {
        "context": {
            "$ref": "https://tennistcg.io/schema/state-context.json"
        },
        "players": {
            "type": "object",
            "properties": {
                "playerA": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                },
                "playerB": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                }
            },
            "required": [
                "playerA",
                "playerB"
            ]
        },
        "phase": {
            "type": "object",
            "required": [
                "type",
                "selectedShot",
                "stack",
                "decidePlayMomentumCard",
                "combinedActionModifiers"                
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "play-momentum-card"
                },
                "selectedShot": {
                    "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/shotCard",
                    "description": "The shot that is currently being resolved, against which momentum cards may be played."                    
                },
                "stack": {
                    "type": "array",
                    "description": "Current stack of momentum cards played.",                    
                    "items": {
                        "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/momentumCard"
                    }
                },
                "decidePlayMomentumCard": {
                    "type": "string",
                    "description": "Whether the current player opts to play a momentum card or passes priority.",
                    "enum": [
                        "playMomentumCard",
                        "pass"
                    ]
                },
                "playedMomentumCard": {
                    "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/momentumCard",
                    "description": "Momentum card played this turn, if any (required if 'playMomentumCard' chosen)."                    
                },
                "spSpent": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Swing Points (SP) spent to play the current momentum card."
                },
                "drawnCard": {
                    "type": "string",
                    "description": "After playing a card the player draws a new card from the stack"
                },
                "combinedActionModifiers": {
                    "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/actions",
                    "description": "The action modifiers that result in combining all played momentum cards in sequence. Momentum actions will any defined from in a previous played momentum card this turn"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "decidePlayMomentumCard": {
                                "const": "playMomentumCard"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "playedMomentumCard",
                            "spSpent",
                            "drawnCard"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "decidePlayMomentumCard": {
                                "const": "pass"
                            }
                        }
                    },
                    "then": {
                        "not": {
                            "required": [
                                "playedMomentumCard",
                                "spSpent",
                                "drawnCard"
                            ]
                        }
                    }
                }
            ]
        }
    }
}
