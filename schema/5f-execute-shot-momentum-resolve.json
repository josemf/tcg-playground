{
    "$id": "https://tennistcg.io/schema/5f-execute-shot-momentum-resolve.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phase 5 — Execute Shot Play Momentum cards — resolve",
    "type": "object",
    "required": [
        "context",
        "players",
        "phase"
    ],
    "properties": {
        "context": {
            "$ref": "https://tennistcg.io/schema/state-context.json"
        },
        "players": {
            "type": "object",
            "properties": {
                "playerA": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                },
                "playerB": {
                    "$ref": "https://tennistcg.io/schema/state-player.json"
                }
            },
            "required": [
                "playerA",
                "playerB"
            ]
        },
        "phase": {
            "type": "object",
            "required": [
                "type",
                "resolvedStack"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "execute-shot-momentum-resolve"
                },
                "selectedShot": {
                    "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/shotCard",
                    "description": "The shot that is currently being resolved, against which momentum cards may be played."                    
                },
                "resolvedStack": {
                    "type": "array",
                    "description": "Current stack (queue) of momentum cards played (LIFO).",                    
                    "items": {
                        "type": "object",
                        "properties": {
                            "momenumCard": {
                                "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/momentumCard"
                            },
                            "countered": {
                                "type": "boolean"
                            }
                        }                                                                      
                    }
                },
                "decidePlayMomentumCard": {
                    "type": "string",
                    "description": "Whether the current player opts to play a momentum card or passes priority.",
                    "enum": [
                        "playMomentumCard",
                        "pass"
                    ]
                },
                "playedMomentumCard": {
                    "$ref": "https://tennistcg.io/schema/definitions.json#/$defs/momentumCard",
                    "description": "Momentum card played this turn, if any (required if 'playMomentumCard' chosen)."                    
                },
                "spSpent": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Swing Points (SP) spent to play the current momentum card."
                },
                "drawnCard": {
                    "type": "string",
                    "description": "After playing a card the player draws a new card from the stack"
                }                
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "decidePlayMomentumCard": {
                                "const": "playMomentumCard"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "playedMomentumCard",
                            "spSpent",
                            "drawnCard"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "decidePlayMomentumCard": {
                                "const": "pass"
                            }
                        }
                    },
                    "then": {
                        "not": {
                            "required": [
                                "playedMomentumCard",
                                "spSpent",
                                "drawnCard"
                            ]
                        }
                    }
                }
            ]
        }
    }
}
