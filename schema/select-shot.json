{
  "$id": "https://tennistcg.io/schema/ph3-select-shot.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phase 3 â€” Select Shot",
  "type": "object",
  "required": ["$prev", "$curr", "$next", "context", "players", "phase"],
  "properties": {
    "$prev": { "type": "string", "format": "uri", "const": "https://tennistcg.io/schema/ph2-anticipate.json" },
    "$curr": { "type": "string", "format": "uri", "const": "https://tennistcg.io/schema/ph3-select-shot.json" },
    "$next": { "type": "string", "format": "uri", "const": "https://tennistcg.io/schema/ph4a-build-rsq.json" },
    "context": { "$ref": "https://tennistcg.io/schema/ph1-serve.json#/properties/context" },
    "players": { "$ref": "https://tennistcg.io/schema/ph1-serve.json#/properties/players" },
    "phase": {
      "type": "object",
      "required": ["id", "selection"],
      "properties": {
        "id": { "type": "string", "const": "ph3-select-shot" },
        "selection": {
          "type": "object",
          "required": ["hitterId", "shotName", "prerequisitesMet", "sideUsed", "skillBonus", "spSpent", "staminaSpent", "notes"],
          "properties": {
            "hitterId": { "type": "string" },
            "shotName": { "type": "string", "enum": ["None", "Drop Shot", "Lob", "Passing Shot", "Smash", "Drop Volley", "Drive Volley", "Inside Out Forehand", "Inside Out Backhand", "Tweener"] },
            "prerequisitesMet": { "type": "boolean" },
            "sideUsed": { "type": "string", "enum": ["FH", "BH"] },
            "skillBonus": { "type": "integer" },
            "spSpent": { "type": "integer", "minimum": 0 },
            "staminaSpent": { "type": "integer", "minimum": 0 },
            "notes": { "type": "string" }
          }
        }
      }
    }
  }
}
